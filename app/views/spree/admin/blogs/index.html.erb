<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  Blog
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to 'New Blog', new_admin_blog_path, :icon => 'icon-plus' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @blog } %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created</th>
      <th>Published</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, edit_admin_blog_path(blog) %></td>
        <td><%= blog.created_at.strftime("%d. %B %Y") %></td>
        <td><%= blog.published? ? 'Yes' : '' %></td>
        <td><%= link_to 'Delete', admin_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>